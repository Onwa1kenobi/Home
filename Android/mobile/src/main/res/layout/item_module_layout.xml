<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:id="@+id/module_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="?attr/selectableItemBackgroundBorderless"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackgroundBorderless"
    android:transitionName="@string/transition_container"
    app:cardCornerRadius="@dimen/text_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/delete_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:paddingEnd="@dimen/text_margin"
            android:paddingLeft="@dimen/text_margin"
            android:paddingRight="@dimen/text_margin"
            android:paddingStart="@dimen/text_margin"
            android:paddingTop="@dimen/text_margin"
            android:src="@drawable/ic_close" />

        <ImageView
            android:id="@+id/module_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/delete_button"
            android:layout_marginBottom="@dimen/text_margin"
            android:gravity="center"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_bed_room"
            android:tint="@color/colorPrimary" />

        <TextView
            android:id="@+id/module_title"
            style="@style/TitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/module_image"
            android:gravity="center"
            tool:text="Bedroom" />

        <TextView
            android:id="@+id/module_running_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/module_title"
            android:gravity="center"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            tool:text="2/10 is running" />

    </RelativeLayout>

</android.support.v7.widget.CardView>