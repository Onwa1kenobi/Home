<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/AppTheme.Widget.TextView</item>
    </style>

    <style name="AppTheme.Widget.TextView" parent="android:Widget.Holo.TextView">
        <!-- Custom Attr-->
        <item name="fontPath">fonts/Lato-Regular.ttf</item>
        <item name="android:textSize">@dimen/description_text_size</item>
    </style>

    <style name="TitleText" parent="TextAppearance.AppCompat.SearchResult.Title">
        <!-- Custom Attr-->
        <item name="fontPath">fonts/Lato-Semibold.ttf</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>
